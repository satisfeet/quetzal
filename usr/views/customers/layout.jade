extends ../layout

block styles
  link(rel='stylesheet', href='/stylesheets/build/common.css')
  link(rel='stylesheet', href='/stylesheets/build/customers.css')

block content
  .container-fluid
    .col-xs-10.col-xs-offset-1
      .row#panel
        .col-xs-4
          form(role='form')
            .button-group
              a.btn.btn-primary(href='/customers/create')
                span.glyphicon.glyphicon-plus-sign
                |  Create
        .col-xs-3.pull-right
          form(role='form')
            .input-group
              input.form-control(
                name='search',
                type='search',
                placeholder='a name, a city...?'
              )
              .input-group-btn
                button.btn.btn-default(type='submit')
                  span.glyphicon.glyphicon-search
                  |  Search
      .row#body
        .col-xs-12
          block content-inner



block scripts
  script(src='/javascripts/build/common.js')
  script(src='/javascripts/build/customers.js')
  script
    | require('./app/common');
    | require('./app/customers');
