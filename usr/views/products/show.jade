extends layout

block content-inner
  section.row
    div.col-xs-6
      div.thumbnail
        img.img-rounded.img-responsive(
          alt=product.name,
          src=product.images[0].url
        )
    div.col-xs-6
      div.row
        p.alert.alert-danger.hidden
      div.row
        div.page-header
          h2= product.name
        p
          | #{product.description}
        p.lead.text-right
          | Retail Price: #{product.pricing.retail} â‚¬
      div.row
        table.table
          thead
            th Name
            th URL
          tbody
            for image in product.images
              tr
                td= image.name
                td= image.url
      div.row.text-capitalize
        div.col-xs-6
          h3 Details
          ul: each details, name in product.details
            li
              h4= name
              ul: each detail, name in details
                li!= name + ': <em>' + detail + '</em>'
        div.col-xs-6
          h3 Variations
          ul: each variation, name in product.variations
            li
              h4= name
              ul: each attr in variation
                li= attr
      div.row
        div.col-xs-4.col-xs-offset-8
          div.btn-group.hidden#actions
            button.btn.btn-primary(id='submit', type='button')
              span.glyphicon.glyphicon-ok
              |  Submit
            button.btn.btn-default(id='cancel', type='button')
              span.glyphicon.glyphicon-remove
              |  Cancel
