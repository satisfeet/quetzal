#products-form
  .col-xs-4.col-xs-offset-1
    .col-xs-10.col-xs-offset-1
      .thumbnail
        img.img-rounded.img-responsive(src='http://placehold.it/600x600')
  .col-xs-6
    form(role='form', method='post')
      legend Create new Product
      p.alert.alert-danger.hidden
      fieldset
        .form-group
          label.control-label(
            for='title'
          ) Title
          .input-group
            input.form-control(
              type='text',
              name='title',
              placeholder='Casual Socks',
              required='required',
              autofocus='true'
            )
            span.input-group-addon
              span.glyphicon.glyphicon-tag
        .form-group
          label.control-label(
            for='description'
          ) Description
          .input-group
            textarea.form-control(
              rows=5,
              type='text',
              name='description',
              placeholder='Tell me why this product is nice...'
            )
            span.input-group-addon
              span.glyphicon.glyphicon-comment
        .form-group
          label.control-label(
            for='pricing-retail'
          ) Price
          .input-group
            input.form-control(
              type='number',
              name='pricing-retail',
              min=0.00,
              step=0.01,
              placeholder='4.99',
              required='required'
            )
            span.input-group-addon
              span.glyphicon.glyphicon-euro
        .form-group
          .btn-group
            button.btn.btn-primary(type='submit') Submit
            a.btn.btn-default(href='/products') Cancel
